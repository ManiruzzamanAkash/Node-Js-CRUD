<nav class="breadcrumb">
  <a class="breadcrumb-item" href="/">Home</a>
  <a class="breadcrumb-item" href="/">All Tasks</a>
  <span class="breadcrumb-item active">Add New Task</span>
</nav>

<div class="card card-body p-3">
  <form action="/store" method="post">
    {{# if success}}
    {{else}}
    {{# if errors}}
    <div class="alert alert-danger">
      {{# each errors}}
      <p>{{ this.msg }}</p>
      {{/each}}
    </div>
    {{/if}}
    {{/if}}

    <div class="form-group">
      <label for="title">Enter Task Title</label>
      <input type="text" class="form-control" name="title" id="title" placeholder="Enter Enter Task Title">
    </div>
    <div class="form-group">
      <label for="description">Enter Task Description</label>
      <textarea name="description" id="description" rows="5" class="form-control"></textarea>
    </div>
    <div class="form-check">
      <label class="form-check-label text-success">
        <input type="radio" name="status" value="false" class="form-check-input"> Not Done
      </label>
      <br>
      <label class="form-check-label text-danger">
        <input type="radio" name="status" value="true" class="form-check-input"> Done
      </label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Task</button>
  </form>
</div>